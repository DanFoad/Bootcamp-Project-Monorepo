<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkerBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:textViewStyle">@style/SkyTextViewStyle</item>
        <item name="android:buttonStyle">@style/SkyButtonStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorDarkerBlue</item>
        <item name="android:colorAccent">@color/colorDarkerBlue</item>
    </style>

    <style name="SkyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sky</item>
    </style>

    <style name="SkyButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/sky</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
    </style>

    <!-- Button theme. -->
    <style name="ButtonTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <!--Uncomment to make buttons bold-->
        <!--<item name="android:fontFamily">@font/sky_med</item>-->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.MyJourneys">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:textColorPrimary">@color/colorLightBlue</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Wishlist Button-->
    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!--Input Fields-->
    <style name="inputField" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
